### tomorrow night bright color scheme ---------------------------------------------
set $bg       #000000
set $fg       #eaeaea
set $selection #424242
set $comment  #969896
set $red      #d54e53
set $orange   #e78c45
set $yellow   #e7c547
set $green    #b9ca4a
set $aqua     #70c0b1
set $blue     #7aa6da
set $purple   #c397d8
set $border   #4d5057

# Window/border colors: border background text indicator child_border
client.focused          $blue     $blue      $bg       $purple    $blue
client.focused_inactive $border   $border    $fg       $border    $border
client.unfocused        $bg       $bg        $comment  $border    $border
client.urgent           $red      $red       $fg       $red       $red
client.placeholder      $bg       $bg        $fg       $bg        $bg

client.background       $bg

for_window [app_id="zen"] move to workspace 1
for_window [app_id="Alacritty"] move to workspace 3
for_window [app_id="com.mitchellh.ghostty"] move to workspace 3
for_window [app_id="com.mitchellh.ghostty"] blur enable

for_window [app_id="thunar"] floating enable, resize set 1000 800, move position center
for_window [app_id="pavucontrol"] floating enable, resize set 600 600, move position center
