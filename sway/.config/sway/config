# Authentication dialogs (important for security)
for_window [app_id="pinentry-qt"] floating enable, sticky enable
for_window [window_role="Organizer"] floating enable

# Title-based fallbacks (helpful for GTK/Firefox/Zen)
for_window [title="^(Open File|Save File|Preferences|About|Organizer)$"] floating enable, move position center

# Firefox/Zen Picture-in-Picture (PIP)
for_window [title="^Picture-in-Picture$"] floating enable, sticky enable, resize set 480 270, move position center

# “Find” / “Print” / small utility dialogs
for_window [title="^(Find|Print)$"] floating enable, move position center

# Float all Zoom windows by default
for_window [app_id="zoom"] floating enable

# But keep the main meeting window tiled
for_window [app_id="zoom" title="Zoom Meeting"] floating disable

# Float and center the annoying notification window
for_window [app_id="zoom" title="^zoom$"] floating enable, move position center

# Float screen sharing controls
for_window [title="zoom\s?share(bar|toolbar)?" ] floating enable

