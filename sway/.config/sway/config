for_window [window_type="toolbar"]       floating enable, move position center
for_window [window_type="splash"]        floating enable, move position center
for_window [window_type="menu"]          floating enable, move position center
for_window [window_type="dropdown_menu"] floating enable, move position center
for_window [window_type="popup_menu"]    floating enable, move position center
for_window [window_type="tooltip"]       floating enable, move position center
for_window [window_type="notification"]  floating enable, move position center

for_window [window_role="pop-up"] floating enable, move position center
